generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
   courses   Course[]
  createdAt DateTime @default(now())
}
model Course {
  id          Int       @id @default(autoincrement())
  title       String
  code        String    @unique // Mã môn học (ví dụ: CS101)
  description String?
  User    User[] // Quan hệ: 1 Course có nhiều Student
}